<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/doc_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_account_circle_white_24dp" />

        <TextView
            android:id="@+id/appointment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/doc_image"
            android:fontFamily="Roboto Regular"
            android:text="Doctor Name"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/appointment_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_name"
            android:layout_toRightOf="@+id/doc_image"
            android:fontFamily="Roboto Regular"
            android:text="Details"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/appointment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_location"
            android:layout_toRightOf="@+id/doc_image"
            android:fontFamily="Roboto Regular"
            android:text="Details"
            android:textColor="#000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/appointment_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"></ImageView>

    </RelativeLayout>

</LinearLayout>