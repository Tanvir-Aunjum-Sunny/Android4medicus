<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medicus.medicus.HomeScreenActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bill"
        android:layout_margin="10dp"
        android:background="#ccc"
        android:id="@+id/listImage"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/listName"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/listDesignation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Designation"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/listDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/listImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/ic_add_circle_outline_black_24dp"></ImageView>

</RelativeLayout>
